@inject NavigationManager navManager

<div class="product-cate-btn" @onclick="@OnClick">
    <span>Something written here</span>
    <div class="banner-color" style="background-color: @(Color)">
    </div>
    <img src="@ImgSrc" alt="">
</div>
@code{
    [Parameter]
    public string Color {get;set;}
    [Parameter]
    public string ImgSrc {get;set;}
    [Parameter]
    public string url{get;set;}
    private void OnClick(){
        if(url != null || url != "") navManager.NavigateTo(url);
    }
}